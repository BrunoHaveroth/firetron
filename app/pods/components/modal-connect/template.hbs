<div class="container-modal modal-admin-register {{if openModal 'open-modal'}}">
  <div class="col-md-6 col-md-offset-3 content-modal">

    <h2 class="modal-title">Conectar</h2>

    <div class="col-md-8 col-md-offset-2">
      <div class="col-md-8">
        <div class="form-group form-animate-text">
          {{input type="text" class="form-text" value=dbHost required=true}}
          <span class="bar"></span>
          <label>Host</label>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group form-animate-text">
          {{input type="text" class="form-text" value=dbPort required=true}}
          <span class="bar"></span>
          <label>Porta</label>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group form-animate-text">
          {{input type="text" class="form-text" value=dbUser required=true}}
          <span class="bar"></span>
          <label>User</label>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group form-animate-text">
          {{input type="password" class="form-text" value=dbPassword required=true}}
          <span class="bar"></span>
          <label>Senha</label>
        </div>
      </div>

      <div class="col-md-12 input-choose">
        <div class="form-group form-animate-text">
          {{input type="text" class="form-text" value=dbPath required=true}}
          <span class="bar"></span>
          <label>Caminho do Banco</label>
        </div>
        <button class="btn-success btn-choose" name="button" {{action 'openDbPath'}}>SELECIONAR</button>
      </div>

      <div class="form-group form-animate-text">
        <button type="button" class="btn btn-info pull-right" {{action 'connectDB'}}>Conectar</button>
      </div>
    </div>
  </div>
</div>
